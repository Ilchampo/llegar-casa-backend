{
	"target": "ES2022",
	"lib": ["ES2022"],
	"extends": "@tsconfig/node22/tsconfig.json",
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./",
		"allowImportingTsExtensions": false,
		"noEmit": false
	},
	"baseUrl": ".",
	"paths": {
		"@/*": ["src/*"]
	},
	"include": ["src/**/*.ts"],
	"exclude": ["dist", "node_modules"]
}
