{
	"name": "llegar-casa-backend",
	"version": "1.0.0",
	"description": "Backend for Llegar a Casa web application",
	"keywords": [
		"llegar",
		"a",
		"casa",
		"web",
		"application",
		"ecuador"
	],
	"license": "ISC",
	"author": "Pablo Beltran",
	"type": "commonjs",
	"main": "index.js",
	"scripts": {
		"dev": "tsx --watch src/index.ts",
		"start": "node dist/src/index.js",
		"build": "tsc",
		"type-check": "tsc --noEmit",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"prepare": "if [ \"$NODE_ENV\" != \"production\" ]; then husky install; fi"
	},
	"devDependencies": {
		"@eslint/js": "^9.28.0",
		"@tsconfig/node22": "^22.0.2",
		"@types/cors": "^2.8.18",
		"@types/dotenv": "^6.1.1",
		"@types/express": "^5.0.2",
		"@types/node": "^22.15.30",
		"eslint": "^9.28.0",
		"eslint-config-prettier": "^10.1.5",
		"globals": "^16.2.0",
		"husky": "^9.1.7",
		"prettier": "^3.5.3",
		"tsx": "^4.19.4",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.33.1"
	},
	"dependencies": {
		"axios": "^1.9.0",
		"cheerio": "^1.0.0",
		"cors": "^2.8.5",
		"dotenv": "^16.5.0",
		"express": "^5.1.0",
		"express-rate-limit": "^7.5.0",
		"form-data": "^4.0.2",
		"helmet": "^8.1.0"
	}
}
